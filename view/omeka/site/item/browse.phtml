endif;

//ソート
$sortHeadings = [
    [
        'label' => $translate('Created'),
        'value' => 'created'
    ]
];
$sortProperties = $this->themeSetting('sort_property');
if ($sortProperties != "") {
    $rows = explode("\n", $sortProperties);
    for ($i = 0; $i < count($rows); $i++) {
        $row = $rows[$i];
        $elements = explode(",", $row);
        if (count($elements) > 1) {
            array_push($sortHeadings, [
                'label' => $translate(trim($elements[1])),
                'value' => $elements[0]
            ]);
        }
    }
} else {
    array_push($sortHeadings, [
        'label' => $translate('Title'),
        'value' => 'dcterms:title'
    ]);
}

//リスト
$bodyProperties = $this->themeSetting('body_property');

$bodyHeadings = [];
// Ensure $bodyProperties is not null and is a string
if (is_string($bodyProperties)) {
    $rows = explode("\n", $bodyProperties);
    for ($i = 0; $i < count($rows); $i++) {
        $row = $rows[$i];
        $elements = explode(",", $row);
        if (count($elements) > 1) {
            array_push($bodyHeadings, [
                'label' => $translate($elements[1]),
                'value' => $elements[0]
            ]);
        }
    }
} else {
    // Handle the case where $bodyProperties is not a string
    // For example, log an error message, set an error flag, etc.
    error_log('Error: $bodyProperties must be a string. Given: ' . var_export($bodyProperties, true));
}

